<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="必须先打开「AccessibilityService 无障碍」权限\n然后在叮咚买菜内使用\n\n点击「吃什么」开始自动买菜\n点击「首页」停止" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="性能差的手机可以适当调长操作间隔" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_speed_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="减少"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_speed_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="操作间隔速率 1x 倍" />

        <Button
            android:id="@+id/btn_speed_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="增加"
            android:textSize="16dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_accessibility_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="打开无障碍" />

    <Button
        android:id="@+id/btn_overlay_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="打开悬浮球" />

</LinearLayout>